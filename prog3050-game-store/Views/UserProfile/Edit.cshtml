@model GameStore.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h2>Update Profile</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" disabled class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="first_name" class="control-label"></label>
                <input asp-for="first_name" class="form-control" />
                <span asp-validation-for="first_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="last_name" class="control-label"></label>
                <input asp-for="last_name" class="form-control" />
                <span asp-validation-for="last_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gender" class="control-label"></label>
                <select asp-for="gender" class="form-control" asp-items="new SelectList(ViewBag.Gender)">
                    <option value="">Please choose Gender </option>
                </select>
               
               
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dob" class="control-label"></label>
                <input asp-for="dob" class="form-control" />
                <span asp-validation-for="dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="city" class="control-label"></label>
                <input asp-for="city" class="form-control" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="province" class="control-label"></label>
                <select asp-for="province" class="form-control" asp-items="ViewBag.ProvinceCode"></select>
                <span asp-validation-for="province" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="favouriteCategory" class="control-label"></label>
                <select asp-for="favouriteCategory" class="form-control" asp-items="ViewBag.GameCategory"></select>
                <span asp-validation-for="favouriteCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="favouritePlatform" class="control-label"></label>
                <select asp-for="favouritePlatform" class="form-control" asp-items="ViewBag.PlatformCategory"></select>
                <span asp-validation-for="favouritePlatform" class="text-danger"></span>
            </div>

       
           

           @* <div class="row">
                <div class="form-group col-lg-5">
                    <label asp-for="address" class="control-label"></label>
                    <input asp-for="address" class="form-control" />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-5">
                    <label asp-for="city" class="control-label"></label>
                    <input asp-for="city" class="form-control" />
                    <span asp-validation-for="city" class="text-danger"></span>
                </div>
      
                

            </div>*@

            <div class="form-group" >
                <div class="checkbox">
                    <label>
                        <input asp-for="receive_promotions" /> @Html.DisplayNameFor(model => model.receive_promotions)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
