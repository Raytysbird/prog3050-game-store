@model IEnumerable<GameStore.Models.Wishlist>
@{
    ViewData["Title"] = "Wish list";
}

<h2>Wish List</h2>

<table class="table">
    <thead>
        @if (ViewBag.WishlistGame.Count > 0 || ViewBag.WishlistMerch.Count > 0)
        {
            <tr>
                <th>
                    Item
                </th>
                <th>Type</th>
                <th></th>
            </tr>
        }
    </thead>
    <tbody>
        @if (ViewBag.WishlistGame.Count > 0)
        {
            @foreach (var item in ViewBag.WishlistGame)
            {
                <tr>
                    <td>
                        @item.Game.Name
                    </td>
                    <td>Game</td>


                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-game_id="@item.GameId">Remove from Wish List</a><br />
                    </td>

                </tr>
            }
        }
         
        @if (ViewBag.WishlistMerch.Count > 0)
        {
            @foreach (var item in ViewBag.WishlistMerch)
            {
                <tr>
                    <td>
                        @item.Merchandise.Name
                    </td>
                    <td>Merchandise</td>

                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-merch_id="@item.MerchandiseId">Remove from Wish List</a><br />
                    </td>

                </tr>
            }
        }

        @if (ViewBag.WishlistMerch.Count == 0 && ViewBag.WishlistGame.Count == 0)
        {
            <tr>
                <td>You don't have Merchandise in your wish list. Checkout our game list to view games and add to wish list. <a asp-controller="Merchandise" asp-action="Index" class="btn btn-success">View Merchandise</a></td>

            </tr>
            <tr>
                <td>You don't have games in your wish list. Checkout our game list to view games and add to wish list. <a asp-controller="Game" asp-action="Index" class="btn btn-success">View games</a></td>

            </tr>
        }

    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Game">Back to game List</a>
</div>