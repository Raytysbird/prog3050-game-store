@model IEnumerable<GameStore.Models.Relation>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AreFriends)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromUserNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToUserNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AreFriends)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromUserNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToUserNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RelationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RelationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RelationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
