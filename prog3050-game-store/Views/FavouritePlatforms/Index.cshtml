@model GameStore.Models.FavouritePlatform

@{
    ViewData["Title"] = "Favourite Platform";
}

<h2 style="margin-bottom:1em;">Favourite Platform</h2>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlatformId" />
            <div class="form-group">
                <label asp-for="Platform.Name" class="control-label"></label>
                <select asp-for="Platform.Name" class="form-control" asp-items="ViewBag.PlatformId">
                    @*<option value="">Please choose Platfrom </option>*@
                </select>
                <span asp-validation-for="Platform.Name" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

