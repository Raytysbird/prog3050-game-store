@model IEnumerable<GameStore.Models.Merchandise>

@{
    ViewData["Title"] = "Merchandise";
}

<h2>Merchandise List</h2>

@if (User.IsInRole("Employee"))
{
    <a class="btnGame btn btn-success" asp-area="" asp-controller="Merchandise" asp-action="Create">Add New Merchandise</a>
}

<p>Below is list of the merchandise.</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @if (User.IsInRole("Employee"))
                    {
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.MerchandiseId">Edit Merchandise</a>
                        <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.MerchandiseId">Delete Merchandise</a>
                    }
                    else
                    {
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.MerchandiseId">Merchandise Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
